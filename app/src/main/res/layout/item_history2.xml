<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="History"
            type="com.velozion.myoitc.db.HistoryData" />


    </data>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/imagedesc"
                        android:src="@drawable/icon_red_circle" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/checkinloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_2sdp"
                        android:text="@{History.checkinloc}"
                        android:textColor="?attr/themeColorPrimary"
                        app:textView_font="@string/font_exo_regular" />

                </LinearLayout>

                <com.chootdev.typefaced.TypeFacedTextView
                    android:id="@+id/checkintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="0dp"
                    android:padding="@dimen/_2sdp"
                    android:text="@{History.checkintime}"
                    android:textColor="@color/nontitle_color"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:textView_font="@string/font_exo_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/imagedesc"
                        android:src="@drawable/icon_green_circle" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/checkoutloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="@dimen/_2sdp"
                        android:text="@{History.checkoutloc}"
                        android:textColor="?attr/themeColorPrimary"
                        app:textView_font="@string/font_exo_regular" />

                </LinearLayout>

                <com.chootdev.typefaced.TypeFacedTextView
                    android:id="@+id/checkouttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="@{History.checkouttime}"
                    android:textColor="@color/nontitle_color"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:textView_font="@string/font_regular" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/imagedesc"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/icon_arrow_right" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/background2"
            android:visibility="gone" />


    </androidx.cardview.widget.CardView>
</layout>