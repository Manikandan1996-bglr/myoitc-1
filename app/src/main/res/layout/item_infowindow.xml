<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="DoctorProfile"
            type="com.velozion.myoitc.db.DoctorProfileData" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#fff"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <com.velozion.myoitc.utilities.RoundedImageView
                    android:id="@+id/docter_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_vertical"
                    android:profileImage="@{DoctorProfile.pic}" />

                <LinearLayout
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/docter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_1sdp"
                        android:text="@{DoctorProfile.name}"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        card_view:textView_font="@string/font_exo_bold" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/docter_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_1sdp"
                        android:text="@{DoctorProfile.qualification}"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_10sdp"
                        card_view:textView_font="@string/font_exo_medium" />


                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/docter_specilist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_1sdp"
                        android:text="@{String.format(@string/quali, DoctorProfile.specialist,DoctorProfile.experience)}"
                        android:textColor="@color/title_color"

                        android:textSize="@dimen/_12sdp"
                        card_view:textView_font="@string/font_exo_medium" />

                    <RatingBar
                        android:id="@+id/docter_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:rating="@{DoctorProfile.rating}" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>