<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="DoctorProfile"
            type="com.velozion.myoitc.db.DoctorProfileData" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:background="@drawable/gradient_1"
                    android:orientation="vertical">

                    <com.velozion.myoitc.utilities.RoundedImageView
                        android:id="@+id/pd_pic"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_15sdp"
                        android:profileImage="@{DoctorProfile.pic}" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/pd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="@{DoctorProfile.name}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:textView_font="@string/font_exo_regular" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/pd_qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="@{DoctorProfile.qualification}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        app:textView_font="@string/font_exo_regular" />

                    <com.chootdev.typefaced.TypeFacedTextView
                        android:id="@+id/pd_specialization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="@{String.format(@string/quali, DoctorProfile.specialist,DoctorProfile.experience)}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:textView_font="@string/font_exo_regular" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="-40dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.chootdev.typefaced.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/rating"
                                android:textColor="@color/nontitle_color"
                                android:textSize="@dimen/_12sdp"
                                app:textView_font="@string/font_exo_regular" />

                            <RatingBar
                                android:id="@+id/pd_rating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:padding="@dimen/_2sdp"
                                android:rating="@{DoctorProfile.rating}" />


                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@color/view_bg2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.chootdev.typefaced.TypeFacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/fes_title"
                                android:textColor="@color/nontitle_color"
                                android:textSize="@dimen/_12sdp"
                                app:textView_font="@string/font_exo_regular" />

                            <com.chootdev.typefaced.TypeFacedTextView
                                android:id="@+id/pd_fees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp"
                                android:text="@{String.format(@string/fees, DoctorProfile.fees)}"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                app:textView_font="@string/font_exo_regular" />


                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:contentDescription="@string/imagedesc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <com.chootdev.typefaced.TypeFacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/about"
                            android:textColor="@color/nontitle_color"
                            android:textSize="@dimen/_14sdp"
                            app:textView_font="@string/font_exo_regular" />

                        <com.chootdev.typefaced.TypeFacedTextView
                            android:id="@+id/pd_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:text="@{DoctorProfile.about}"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_12sdp"
                            app:textView_font="@string/font_exo_regular" />

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@color/view_bg2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:contentDescription="@string/imagedesc"
                        android:src="@drawable/icon_hospital" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:orientation="vertical">


                        <com.chootdev.typefaced.TypeFacedTextView
                            android:id="@+id/hospital_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:text="@{DoctorProfile.hospital_name}"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_12sdp"
                            app:textView_font="@string/font_exo_regular" />

                        <com.chootdev.typefaced.TypeFacedTextView
                            android:id="@+id/pd_hospitaladdress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:text="@{DoctorProfile.area}"
                            android:textColor="@color/nontitle_color"
                            android:textSize="@dimen/_12sdp"
                            app:textView_font="@string/font_exo_regular" />

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/pd_hospotal_loc_pic"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@color/view_bg2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:contentDescription="@string/imagedesc"
                        android:src="@drawable/icon_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:orientation="vertical">


                        <com.chootdev.typefaced.TypeFacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/availabletoday"
                            android:textColor="@color/nontitle_color"
                            android:textSize="@dimen/_14sdp"
                            app:textView_font="@string/font_exo_regular" />

                        <com.chootdev.typefaced.TypeFacedTextView
                            android:id="@+id/pd_availabletimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:text="@{DoctorProfile.avaliable_timings}"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/_12sdp"
                            app:textView_font="@string/font_exo_regular" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@color/view_bg2" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp">

                    <com.chootdev.typefaced.TypeFacedButton
                        android:id="@+id/pd_bookappointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_full_"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/bookappointment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:button_font="@string/font_exo_regular" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</layout>